[user]
  name = YamaCIR-KIT
  email = httperror@404-notfound.jp

[alias]
  graph = log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'

  stage = add -A
  unstage = reset -q HEAD --

# editing
  discard = checkout --

# commit
  uncommit = reset --mixed HEAD~

[core]
  editor = vi
  quotepath = false

[color]
  ui = auto

[merge]
  ff = false

[push]
  default = simple

[pull]
  rebase = true
